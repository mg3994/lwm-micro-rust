# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=linkwithmentor_user
DATABASE_PASSWORD=linkwithmentor_password
DATABASE_NAME=linkwithmentor
DATABASE_MAX_CONNECTIONS=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=24
JWT_ISSUER=linkwithmentor

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=debug

# Payment Gateway Configuration
UPI_GATEWAY_URL=https://api.upi-gateway.com
UPI_MERCHANT_ID=your-merchant-id
UPI_API_KEY=your-api-key

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
